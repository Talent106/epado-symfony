{% extends "admin.html.twig" %}

{% form_theme form _self %}

{% block _order_status_translations_row %}
    <div class="widget">
        {% if(form.children|length!=1) %}
            {{ form_label(form) }}
        {% endif %}
        
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div> 
{% endblock %}


{% block header %}<h1><i class="fa fa-shopping-cart"></i>{{ 'Status zamówienia'|trans }}</h1>{% endblock %}

{% block content %}


    <div class="content">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
    <div class="content">
        <p>W treści powiadomienia można używać zmiennych:</p>
        <p>
            {{ '{{link}}' }} - {{ 'link do zamówienia'|trans }}<br>
            {{ '{{orderid}}' }} - {{ 'nr zamówienia'|trans }}<br>
            {{ '{{delivery}}' }} - {{ 'adres do wysyłki'|trans }}<br>
            {{ '{{billing}}' }} - {{ 'dane rozliczeniowe'|trans }}<br>
            {{ '{{price}}' }} - {{ 'cena zamówienia'|trans }}<br>
            {{ '{{products}}' }} - {{ 'tabelka z produktami oraz ich cenami w zamówieniu'|trans }}<br>
        </p>
    </div>

{% endblock %}